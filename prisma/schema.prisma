generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String    @unique
  password  String
  role      String    @default("MEMBER") // MEMBER, SECRETARY, TREASURER, ADMIN
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  payments  Payment[]
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  location    String
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Document {
  id        String   @id @default(cuid())
  title     String
  content   String   // For simplicity, storing text content or a URL to a file
  type      String   // MINUTE, AGENDA, REPORT, OTHER
  date      DateTime // Date of the meeting or report
  createdAt DateTime @default(now())
  
  // File Upload Support
  fileName  String?
  mimeType  String?
  fileData  Bytes?
}

model Payment {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  amount      Float
  description String
  status      String   @default("PENDING") // PENDING, COMPLETED, FAILED
  createdAt   DateTime @default(now())
}
